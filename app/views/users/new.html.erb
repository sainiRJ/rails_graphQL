<% if flash.any? %>
<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>">
    <%= value %>
  </div>
<% end %>
<% end %>


<%= form_for @user, method: :post do |f| %>
<%= f.label :name %>
<%= f.text_field  :name %>
<br>
<%= f.label :email %>
<%= f.text_field  :email %>
<br>
<%= f.label :password %>
<%= f.text_field  :password%>
<br>
<%= f.label :password_confirmation %>
<%= f.text_field  :password_confirmation %>
<br>
<%= f.submit "Sign_up" %>

<% end %>

